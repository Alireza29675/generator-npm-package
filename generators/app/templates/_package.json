{
  "version": "0.0.1",
  "name": "<%= appname %>",
  "description": "<%= description %>",
  "license": "MIT",
  "homepage": "https://github.com/<%= gitUser %>/<%= appname %>",
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= gitUser %>/<%= appname %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= gitUser %>/<%= appname %>/issues"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "babel -d lib src",
    "compile:watch": "npm run compile -- --watch",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --compilers js:babel-core/register --timeout 5000 --recursive",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "babel-node `npm bin`/istanbul cover `npm bin`/_mocha -- --recursive",
    "preversion": "npm run lint && npm test",
    "version": "npm run compile",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^2.3.4"
  },
  "engines": {
    "node": ">=0.12",
    "npm": ">=3"
  }
}
